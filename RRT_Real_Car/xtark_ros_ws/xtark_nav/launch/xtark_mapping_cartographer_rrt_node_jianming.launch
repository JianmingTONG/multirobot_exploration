<launch>
<group ns="robot1">  
  <arg name="robotname" value="robot1"/>

  <param name="/use_sim_time" value="false" />
  <arg name="resolution" default="480p"/>
	
  <include file="$(find xtark_ros_wrapper)/launch/xtark_bringup_robot1_jianming.launch" >
    <arg name="namespace" value="$(arg robotname)"/>
  </include>

  <include file="$(find xtark_ros_wrapper)/launch/xtark_camera_robot1_jianming.launch">
	  <arg name="resolution" value="$(arg resolution)"/>
  </include>

  <node name="cartographer_node" pkg="cartographer_ros"
      type="cartographer_node" args="
          -configuration_directory $(find cartographer_ros)/configuration_files
          -configuration_basename xtark_robot1_jianming.lua"
      output="screen">
    <remap from="scan" to="scan" />
  </node>

        <!-- 启动路径规划算法包 -->	
	<include file="$(find xtark_nav)/launch/include/teb_move_base_omni_jianming.launch"/>
    
	<node pkg="xtark_nav" type="cartographer_node" name="cartographer2discrete" output="screen"/>
  
  <!-- <node pkg="xtark_nav" type="costmap_republish_node" name="costmapRepublish" output="screen"/> -->

  <node name="cartographer_occupancy_grid_node" pkg="cartographer_ros"
      type="cartographer_occupancy_grid_node" args="-resolution 0.05" >
      <remap from="map" to="cartographerMap"/>
  </node>
</group>
</launch>


